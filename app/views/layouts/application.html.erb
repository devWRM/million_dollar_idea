<!DOCTYPE html>
<html>
  <head>
    <title>MillionDollarIdea</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div>
      <% if logged_in? %>
        <%= link_to "Create an Idea" %></br>
        <%= link_to "List Your Ideas" %></br>
        <%= link_to "??" %></br>
        <%= link_to "Log Out", logout_path, method: "delete" %>
      <% end %>

    </div>

    <%= yield %>
  </body>
</html>
